-- F) TRY INSERT VALUE IN EMPLOYEE TABLE (COPY ERROR MESSAGE)
INSERT INTO EMPLOYEE15 VALUES
(
    7,'AKASH',60,70000
);
--ORA-02291: integrity constraint (SQL_MQAUXZNKJXLHNIMVLXFFVQBDZ.SYS_C00112944743) violated - parent key not found ORA-06512: at "SYS.DBMS_SQL", line 1721

-- G) DISPLAY NAME AND SALARY OF ALL THE EMEPLOYEE WHOSE DEPT NO IS 10
SELECT ENAME, SALARY FROM EMPLOYEE15 WHERE DNO = 10;


-- H) DISPLAY THE NAME AND SALARY OF THE EMPLOYEE WHO ARE WORKING IN ACCOUNTS DEPT
SELECT DNO FROM DEPARTMENT15 WHERE DNAME = 'ACCOUNT';
-- HERE WE ARE SELECTING DNO WHERE DNAME IS ACCOUNT FROM DEPARTMENT 15 TABLE
SELECT ENAME, SALARY FROM EMPLOYEE15 WHERE DNO =(SELECT DNO FROM DEPARTMENT15 WHERE DNAME = 'ACCOUNT');
