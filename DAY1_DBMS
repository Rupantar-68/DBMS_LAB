-- C) DISPLAY ALL DATA OF DEPARTMENT TABLE 
SELECT * FROM DEPARTMENT15

-- D) DISPLAY ALL DATA FROM EMPLOYEE TABLE 
SELECT * FROM EMPLOYEE15

-- E) TRY INSERT VALUE IN EMPLOYEE TABLE (COPY ERROR MESSAGE)
INSERT INTO EMPLOYEE15 VALUES
(
    1,'AKASH',60,70000
);
