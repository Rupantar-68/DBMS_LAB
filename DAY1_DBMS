--- DBMS DAY1 LAB
-- A) CREATING DEPARTMENT TABLE
CREATE TABLE Department15
(
    DNO NUMBER(2) PRIMARY KEY,
    DNAME VARCHAR(10) NOT NULL
);

-- DESCRIBING DEPARTMENT TABLE
DESC DEPARTMENT15;

-- A) CREATING EMPLOYEE TABLE
CREATE TABLE Employee15
(
    ENO NUMBER(2) PRIMARY KEY,
    ENAME VARCHAR(10) NOT NULL,
    DNO NUMBER(2) REFERENCES DEPARTMENT15,
    SALARY NUMBER(6)
);

-- DESCRIBING THE STRUCTURE OF EMPLOYEE TABLE
DESC EMPLOYEE15

-- B) INSERING DATA INTO DEPARTMENT TABLE
